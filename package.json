{
  "name": "rpg-vue-base",
  "version": "0.1.2",
  "description": "A library to support my vue projects for D&D Webapps using pinia and google firebase",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./lib/index.js\"",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "preversion": "npm run lint",
    "prepublishOnly": "npm test && npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hexagon06/rpg-vue-base.git"
  },
  "keywords": [],
  "author": "Jasper Saaltink",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hexagon06/rpg-vue-base/issues"
  },
  "homepage": "https://github.com/hexagon06/rpg-vue-base#readme",
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "tsc-watch": "^5.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.6.3"
  },
  "files": [
    "lib/**/*"
  ]
}
