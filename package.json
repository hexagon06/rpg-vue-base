{
  "name": "rpg-vue-base",
  "version": "0.4.0",
  "description": "A library to support my vue projects for D&D Webapps using pinia and google firebase",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "babel src --out-dir lib --extensions .ts",
    "watch": "babel --watch src --out-dir lib --extensions .ts",
    "test": "jest --config",
    "test:watch": "jest --config --watch",
    "test:coverage": "jest --config --watch --coverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "preversion": "tsc && npm run build && npm test & npm run lint",
    "prepublishOnly": "tsc && npm run build && npm test & npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "tsc": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hexagon06/rpg-vue-base.git"
  },
  "keywords": [],
  "author": "Jasper Saaltink",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hexagon06/rpg-vue-base/issues"
  },
  "homepage": "https://github.com/hexagon06/rpg-vue-base#readme",
  "dependencies": {
    "@types/lodash": "^4.14.181",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.4.1",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.4",
    "tsc-watch": "^5.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.6.3"
  },
  "files": [
    "lib/**/*"
  ],
  "jest": {
    "preset": "ts-jest/presets/js-with-babel-esm",
    "roots": [
      "<rootDir>/src"
    ]
  }
}
